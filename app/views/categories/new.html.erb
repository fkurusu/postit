<%= render 'shared/title', title: 'New Category' %>

<div class="well">
  <%= form_for @category do |f| %>
    <%= render 'shared/form_errors', obj: @category %>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit 'Create category', class: 'btn btn-primary' %>
  <% end %>
</div>