<% if @vote.valid? %>
  <% up_votes = @post.up_votes %>
  $("#post_<%= @post.slug %>_votes_up").html("<%= up_votes %> <%= 'vote'.pluralize(up_votes)%>")

  <% down_votes = @post.down_votes %>
  $("#post_<%= @post.slug %>_votes_down").html("<%= down_votes %> <%= 'vote'.pluralize(down_votes)%>")
<% else %>
  $("#vote_<%= @post.slug %>_error").html("Already counted.")
    .css(
      {
        "background-color" : "#f2dede",
        "border-color" : "#eed3d7",
        "border-radius" : "10px",
        "color" : "#b94a48",
        "margin" : "1px",
        "padding" : "2px"
      }
    )
    $("#vote_<%= @post.slug %>_error").fadeTo(3000, 0)
    setTimeout(function(){
      $('#vote_<%= @post.slug %>_error').remove();
    }, 3000);
<% end %>
