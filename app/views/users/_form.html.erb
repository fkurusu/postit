<div class="well">
  <%= form_for @user do |f| %>
    <%= render 'shared/form_errors', obj: @user %>
    <div class="control-group">
      <%= f.label :name, 'Username' %>
      <%= f.text_field :name %>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit @user.new_record? ? 'Register' : 'Update profile', class: 'btn btn-success' %>
  <% end %>
</div>
